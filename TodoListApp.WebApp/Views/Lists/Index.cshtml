@model List<TodoListApp.WebApp.Models.TaskList>

@{
    ViewData["Title"] = "My Task Lists";
}

<div class="container mt-4">
    <h2>My Task Lists</h2>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New List</a>
    </p>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var list in Model)
            {
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@list.Title</h5>
                            <p class="card-text">@list.Description</p>
                            <p class="card-text">
                                <small class="text-muted">
                                    Created: @list.CreatedDate.ToString("MMM dd, yyyy")
                                </small>
                            </p>
                            <div class="btn-group">
                                <a href="#" class="btn btn-outline-primary btn-sm">View Tasks</a>
                                <form asp-action="Delete" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@list.Id" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm"
                                            onclick="return confirm('Are you sure you want to delete this list?')">
                                        Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h4>No task lists found</h4>
            <p>You haven't created any task lists yet. <a asp-action="Create">Create your first task list</a> to get started!</p>
        </div>
    }
</div>