@{
    ViewData["Title"] = "Task Manager";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Task Manager</h1>
    <p class="lead">Simple and effective way to organize your tasks</p>

    @if (ViewData["IsAuthenticated"] as bool? == true)
    {
        <!-- Если пользователь вошел - ДОЛЖНЫ ВИДЕТЬ ЭТО -->
        <div class="mt-5">
            <h3>Welcome, @ViewData["UserEmail"]!</h3>
            <div class="mt-3">
                <a href="/Lists" class="btn btn-primary btn-lg">My Task Lists</a>
                <a href="/Account/Logout" class="btn btn-outline-secondary btn-lg">Logout</a>
            </div>
        </div>
    }
    else
    {
        <!-- Если пользователь не вошел -->
        <div class="mt-5">
            <h3>Get Started</h3>
            <p>Create an account to start managing your tasks</p>
            <div class="mt-3">
                <a href="/Account/Register" class="btn btn-primary btn-lg">Sign Up</a>
                <a href="/Account/Login" class="btn btn-outline-secondary btn-lg">Login</a>
                <a href="/Account/DemoLogin" class="btn btn-success btn-lg">Try Demo</a>
            </div>
        </div>
    }

    <div class="row mt-5">
        <div class="col-md-4">
            <h4>Create Lists</h4>
            <p>Organize your tasks into different lists</p>
        </div>
        <div class="col-md-4">
            <h4>Add Tasks</h4>
            <p>Keep track of everything you need to do</p>
        </div>
        <div class="col-md-4">
            <h4>Stay Organized</h4>
            <p>Never forget important tasks again</p>
        </div>
    </div>
</div>